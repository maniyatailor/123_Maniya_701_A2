<!DOCTYPE html>
<html>
<head>
  <title>Registration Success</title>
  <style>
    table, th, td { border: 1px solid black; border-collapse: collapse; }
    th, td { padding: 8px; }
    img { max-width: 100px; }
  </style>
</head>
<body>
  <h2>Registration Successful!</h2>
  <table>
    <tr><th>Field</th><th>Value</th></tr>
    <tr><td>Username</td><td><%= user.username %></td></tr>
    <tr><td>Email</td><td><%= user.email %></td></tr>
    <tr><td>Gender</td><td><%= user.gender %></td></tr>
    <tr><td>Hobbies</td><td><%= Array.isArray(user.hobbies) ? user.hobbies.join(', ') : user.hobbies %></td></tr>
    <tr><td>Profile Pic</td><td><img src="/uploads/<%= user.profilePic %>" alt="Profile Pic" /></td></tr>
    <tr><td>Other Pics</td><td>
      <% if (user.otherPics && user.otherPics.length) { %>
        <% user.otherPics.forEach(function(pic) { %>
          <img src="/uploads/<%= pic %>" alt="Other Pic" />
        <% }); %>
      <% } else { %>None<% } %>
    </td></tr>
  </table>
  <br>
  <a href="/download/<%= user.username %>">Download Your Data</a>
</body>
</html>
